<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/groupProjectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="32dp"
            android:text="@string/group_project"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/firebaseDatabaseButton"
            app:layout_constraintTop_toBottomOf="@+id/firebaseDatabaseButton" />

        <Button
            android:id="@+id/weatherButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="15dp"
            android:text="@string/weather"
            app:layout_constraintBottom_toTopOf="@+id/firebaseDatabaseButton"
            app:layout_constraintStart_toStartOf="@+id/firebaseDatabaseButton"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="54dp"
            android:layout_marginTop="157dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/team_jackson_lily_aaron_parth_and_priyesh"
            app:layout_constraintBottom_toTopOf="@+id/weatherButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/firebaseDatabaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="@string/firebase_database"
            app:layout_constraintBottom_toTopOf="@+id/groupProjectButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
